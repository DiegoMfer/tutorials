# Example SPARQL queries for the basic.ttl file

# Query 1: Find all people and their names
SELECT ?person ?name
WHERE {
    ?person a <http://xmlns.com/foaf/0.1/Person> ;
            <http://xmlns.com/foaf/0.1/name> ?name .
}

